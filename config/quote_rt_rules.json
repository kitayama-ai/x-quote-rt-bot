{
  "description": "引用RT投稿のルール設定",
  "quote_rt": {
    "min_comment_length": 30,
    "max_comment_length": 250,
    "max_same_source_daily": 1,
    "max_consecutive_quotes": 2,
    "min_delay_from_original_minutes": 120,
    "require_original_comment": true,
    "banned_patterns": [
      "翻訳しました",
      "Translation:",
      "translated"
    ]
  },
  "mix_rules": {
    "daily_total_target": 10,
    "daily_total_min": 7,
    "daily_total_max": 10,
    "quote_rt_ratio_min": 0.5,
    "quote_rt_ratio_max": 0.7,
    "original_ratio_min": 0.3,
    "original_ratio_max": 0.5,
    "first_post_type": "original",
    "last_post_type": "flexible"
  },
  "buzz_thresholds": {
    "likes_min": 500,
    "retweets_min": 100,
    "age_max_hours": 48,
    "lang": ["en"]
  },
  "templates": [
    {
      "id": "translate_comment",
      "name": "翻訳+自分コメント型",
      "description": "要約→「僕的なポイントは〜」",
      "max_daily_uses": 2
    },
    {
      "id": "summary_points",
      "name": "要点まとめ型",
      "description": "「海外で話題の〇〇。ポイント3つ:」",
      "max_daily_uses": 2
    },
    {
      "id": "question_prompt",
      "name": "問題提起型",
      "description": "要約→「これ日本でも〜。みんなどう思う？」",
      "max_daily_uses": 2
    },
    {
      "id": "practice_report",
      "name": "実践レポート型",
      "description": "要約→「実際に試してみた。結果:」",
      "max_daily_uses": 2
    },
    {
      "id": "breaking_news",
      "name": "速報型",
      "description": "要約→「これはデカい。〜が変わる」",
      "max_daily_uses": 2
    }
  ],
  "warmup_schedule": {
    "week_0": {"days": "1-3", "daily_quotes": 0, "daily_originals": 3, "note": "手動のみ"},
    "week_1": {"days": "4-7", "daily_quotes": 1, "daily_originals": 3, "note": "承認制"},
    "week_2": {"days": "8-14", "daily_quotes": 2, "daily_originals": 5, "note": "承認制"},
    "week_3": {"days": "15-21", "daily_quotes": 4, "daily_originals": 4, "note": "半自動"},
    "week_4_plus": {"days": "22+", "daily_quotes": 7, "daily_originals": 3, "note": "フル稼働"}
  }
}
