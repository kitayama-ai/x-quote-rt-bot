rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================
    // Users collection
    // ============================
    // ユーザーは自分のドキュメントのみ読み書き可能
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      // 削除は不可
      allow delete: if false;

      // ============================
      // Queue Decisions (per-user subcollection)
      // ============================
      // ユーザーは自分のキュー決定のみ読み書き可能
      match /queue_decisions/{tweetId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create, update: if request.auth != null && request.auth.uid == userId;
        allow delete: if false; // Admin SDKのみ
      }

      // ============================
      // Operation Requests (per-user subcollection)
      // ============================
      // ユーザーは自分の操作リクエストのみ読み書き可能
      match /operation_requests/{opId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId;
        // ユーザーは自分のリクエストを「キャンセル」に変更可能
        // running/completed/failed への更新は Admin SDK のみ
        allow update: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.status == 'cancelled';
        allow delete: if false;
      }
    }

    // ============================
    // API Keys collection
    // ============================
    // ユーザーは自分のAPIキーのみ読み書き可能
    match /api_keys/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // 削除は不可
      allow delete: if false;
    }

    // ============================
    // Dashboard Data collection
    // ============================
    // ユーザーは自分のダッシュボードデータのみ読み取り可能
    // 書き込みはサーバーサイド（Admin SDK）のみ
    match /dashboard_data/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Admin SDKのみ
    }

    // ============================
    // Persona Profiles collection
    // ============================
    // ユーザーは自分のペルソナプロファイルのみ読み取り可能
    // 書き込みはサーバーサイド（Admin SDK）のみ
    match /persona_profiles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Admin SDKのみ
    }

    // ============================
    // Selection Preferences collection
    // ============================
    // ダッシュボードからの選定設定
    // ユーザーは自分の設定のみ読み書き可能
    match /selection_preferences/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // デフォルト: 全て拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
